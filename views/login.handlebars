<div class="forms">

<form id="login-form" class="login-form bord">
  <div class="form-group">
      <h2 class="form-title">Login</h2>
    <label for="email-login"></label>
    <input type="email" class="form-control" id="email-login" aria-describedby="emailHelp" placeholder="enter email">
  </div>
  <div class="form-group">
    <label for="password-login"></label>
    <input type="password" class="form-control" id="password-login" placeholder="password">
  </div>
  <button type="submit" class="btn btn-btm btn-primary">login</button>
</form>

<form id="signup-form" class="signup-form bord">
    <div class="form-group">
        <h2 class="form-title">Create account</h2>
        <label for="username-signup"></label>
    <input type="username-signup" class="form-control" id="username-signup" placeholder="enter username">
  </div>
  <div class="form-group">
    <label for="email-signup"></label>
    <input type="email" class="form-control" id="email-signup" aria-describedby="emailHelp" placeholder="enter email">
  </div>
  <div class="form-group">
    <label for="password-signup"></label>
    <input type="password" class="form-control" id="password-signup" placeholder="password">
  </div>
  <button type="submit" class="btn btn-btm btn-primary">create account</button>
</form>

<script src="/javascript/login.js"></script>

</div>